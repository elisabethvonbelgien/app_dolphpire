<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dolphpire.social">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashScreen.Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Login.Theme" />
        <activity
            android:name=".IntroRegisterActivity"
            android:theme="@style/Register.Theme" />
        <activity
            android:name=".NameRegisterActivity"
            android:theme="@style/Register.Theme" />
        <activity
            android:name=".UserRegisterActivity"
            android:theme="@style/Register.Theme" />
        <activity
            android:name=".SecurityRegisterActivity"
            android:theme="@style/Register.Theme" />
        <activity android:name=".PrivateRegisterActivity"
            android:theme="@style/Register.Theme" />
    </application>

</manifest>